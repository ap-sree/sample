    <script>
        let table;
        
        $(document).ready(function() {
            // Initialize DataTable
            table = $('#customTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                pageLength: 5,
                dom: 'rtip'
            });
            
            // Move controls to custom location
            $('#customTable_length').html($('.dataTables_length').html());
            $('#customTable_filter').html($('.dataTables_filter').html());
            
            // Bind the select and input to work with DataTable
            $('#customTable_length select').on('change', function() {
                table.page.len($(this).val()).draw();
            });
            
            $('#customTable_filter input').on('keyup', function() {
                table.search($(this).val()).draw();
            });
        });
        
        // Action button functions
        function viewAction(value) {
            alert('View action clicked for: ' + value);
            // Add your custom view logic here
        }
        
        function editAction(value) {
            alert('Edit action clicked for: ' + value);
            // Add your custom edit logic here
        }
        
        function deleteAction(value) {
            if (confirm('Are you sure you want to delete: ' + value + '?')) {
                alert('Delete action confirmed for: ' + value);
                // Add your custom delete logic here
            }
        }
    </script>
